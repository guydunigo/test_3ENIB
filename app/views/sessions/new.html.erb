<main class="form-page">
    <div class="container">
        <div class="row">
            <div class="card col-md-8">
                <h1>Log in</h1>
                <%= form_for(:session, url: login_path) do |f| %>
                    <%= f.email_field :email, placeholder: "Email", required: "true", class: "form-control" %>
                    <%= f.password_field :password, placeholder: "Password", required: "true", class: "form-control" %>
                    <%= f.submit "Log in", class: "form-btn form-control btn" %>
                <% end %>
            </div>
        </div>
    </div>
</main>